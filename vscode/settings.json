{
  "apc.font.family": "Hack Nerd Font",
  "apc.monospace.font.family": "Hack Nerd Font",
  "apc.electron": {
    "titleBarStyle": "hiddenInset"
  },
  "apc.activityBar": {
    "position": "bottom",
    "size": 35,
    "itemMargin": 8,
    "hideSettings": true
  },
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 35,
    "fontSize": 11
  },
  "apc.stylesheet": {
    ".title-actions": "display: none !important",
    ".editor-actions": "display: none !important",

    ".monaco-workbench .part>.title>.title-label":"line-height: 40px !important",

    ".search-view .monaco-tl-row":"font-size: 11px !important",
    ".search-view .message": "font-size: 11px !important",
    ".search-view .monaco-count-badge": "font-size: 8px !important; padding: 0px 8px !important; line-height: 18px !important",

    ".extension-list-item": "padding: 0 0 0 10px !important;",
    ".extension-list-item .details": "font-size: 11px !important",
    ".extension-list-item .icon": "height: 22px !important; width: 22px !important; padding-right: 10px !important;",
    ".extension-list-item .action-item": "visibility: hidden !important",

    ".tabs": "background: #1c1b21 !important",
    ".tabs-border-bottom": "--tabs-border-bottom-color: #17161b !important",
    ".tab": "border-right: 1px solid #17161b !important",

    ".part.sidebar.left": "border-right: 1px solid #17161b !important",
    ".part.activitybar.left": "border-color: #17161b !important",
    ".part.statusbar.status-border-top": "--status-border-top-color: #17161b !important",

    ".quick-input-widget": "top: 20% !important; box-shadow: 0 0 10px 10px #11111b !important"
  },

  "breadcrumbs.enabled": false,

  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.fontFamily": "Hack Nerd Font",
  "editor.folding": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.fontLigatures": true,

  "explorer.compactFolders": false,

  "extensions.ignoreRecommendations": true,

  "files.insertFinalNewline": true,

  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.errorColor": "rgba(255,109,103,0.6)",
  "indentRainbow.lightIndicatorStyleLineWidth": 0.5,
  "indentRainbow.colors": [
    "rgba(244,176,132,0.9)",
    "rgba(137,180,250,0.9)"
  ],

  "projectManager.git.baseFolders": [
    "~/Projects"
  ],

  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",

  "workbench.colorCustomizations": {
    "editor.background": "#181825",
    "editorCursor.foreground": "#f1dbaa",

    "list.hoverForeground": "#f1dbaa",
    "list.activeSelectionForeground": "#cba6f7",

    "terminal.background": "#181825",
    "terminalCursor.foreground": "#f1dbaa"
  },

  "workbench.iconTheme": "catppuccin-perfect-mocha",
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  "window.commandCenter": false,
  "window.dialogStyle": "native",
  "window.nativeTabs": true,
  "window.titleBarStyle": "native"
}
